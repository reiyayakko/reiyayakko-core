{
    "compilerOptions": {
        // module
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./src",
        // types
        "target": "ES2018",
        "lib": ["ES2018"],
        "typeRoots": [],
        "strict": true,
        // "noUncheckedIndexedAccess": true,
        // lint
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    }
}